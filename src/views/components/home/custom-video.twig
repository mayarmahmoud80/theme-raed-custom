<section class="video-section" style="text-align:center; padding: 40px 0;">
  {% comment %} قراءة عنوان الفيديو حسب اللغة {% endcomment %}
  {% assign video_title = section.settings.video_title | t %}
  
  {% if video_title %}
    <h2 style="color: #333; margin-bottom: 20px;">{{ video_title }}</h2>
  {% endif %}

  {% assign video_src = section.settings.video_url %}
  {% if video_src %}
    <video autoplay muted loop playsinline controls style="width:100%; max-width: 700px; border-radius: 8px;">
      <source src="{{ video_src }}" type="video/mp4" />
      متصفحك لا يدعم عرض الفيديو.
    </video>
  {% else %}
    <p>لا يوجد رابط فيديو محدد.</p>
  {% endif %}
</section>
