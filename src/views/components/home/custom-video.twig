{# =========================
   قسم الفيديو المخصص
   ========================= #}



<section class="custom-video">
  <div class="container">
    {% set video_title = block.settings.video_title | default('شاهد الفيديو الآن') %}
    {% set video_url   = block.settings.video_url | default('https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerEscapes.mp4') %}

    {% if video_title %}
      <h2>{{ video_title }}</h2>
    {% endif %}

    {% if video_url %}
      <div class="video-wrapper">
        <video controls>
          <source src="{{ video_url }}" type="video/mp4" />
          متصفحك لا يدعم تشغيل الفيديو.
        </video>
      </div>
    {% endif %}
  </div>
</section>
