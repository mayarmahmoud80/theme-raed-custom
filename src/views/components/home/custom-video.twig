   ========================= #}

{# تعيين متغيرات من لوحة التحكم أو من الحقول أو fallback #}
{% set video_title = fields.video_title %}
{% set video_url   = fields.video_url %}

<section class="custom-video">
  <div class="container">
    <h2>{{ video_title }}</h2>

    <div class="video-wrapper">
      <video controls>
        <source src="{{ video_url }}" type="video/mp4" />
        متصفحك لا يدعم تشغيل الفيديو.
      </video>
    </div>
  </div>
</section>
