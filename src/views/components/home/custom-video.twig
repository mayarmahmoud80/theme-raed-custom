{% set video_title = settings.home_video_title|default(fields.video_title|default('شاهد الفيديو الآن')) %}
{% set video_url   = settings.home_video_url |default(fields.video_url  |default('https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4')) %}

<section class="custom-video">
  <div class="container">
    <h2>{{ video_title }}</h2>

    <div class="video-wrapper">
      <video controls>
        <source src="{{ video_url }}" type="video/mp4" />
        متصفحك لا يدعم تشغيل الفيديو.
      </video>
    </div>
  </div>
</section>
