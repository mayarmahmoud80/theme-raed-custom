{% set video_title = section.fields.video_title.value['ar'] | default('شاهد الفيديو الآن') %}
{% set video_url = section.fields.video_url.value | default('https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4') %}

{% if video_title %}
  <h2>{{ video_title }}</h2>
{% endif %}

{% if video_url %}
  <video autoplay muted loop playsinline controls style="width:100%; max-width:700px; border-radius:8px;">
    <source src="{{ video_url }}" type="video/mp4" />
  </video>
{% else %}
  <p>لا يوجد رابط فيديو محدد.</p>
{% endif %}
