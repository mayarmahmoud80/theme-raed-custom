{# =========================
   قسم الفيديو المخصص
   ========================= #}

<section class="custom-video">
  <div class="container">
    {% if fields.video_title %}
      <h2>{{ fields.video_title }}</h2>
    {% endif %}

    {% if fields.video_url %}
      <div class="video-wrapper">
        <video controls>
          <source src="{{ fields.video_url }}" type="video/mp4" />
          متصفحك لا يدعم تشغيل الفيديو.
        </video>
      </div>
    {% endif %}
  </div>
</section>
