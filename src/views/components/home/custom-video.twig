{% set default_title = 'شاهد الفيديو الآن' %}

{# تحقق من نوع القيمة في لوحة التحكم #}
{% set video_title = default_title %}
{% if section.fields.video_title.value is iterable %}
    {# لو object متعدد اللغات، خذ العربي أو fallback للـ default #}
    {% set video_title = section.fields.video_title.value['ar'] | default(default_title) %}
{% elseif section.fields.video_title.value is string %}
    {# لو مجرد نص، استخدمه مباشرة #}
    {% set video_title = section.fields.video_title.value %}
{% endif %}

{% set video_url = section.fields.video_url.value | default('https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4') %}

<section class="video-section" style="text-align:center; padding:40px 0;">
    <h2>{{ video_title }}</h2>

{% if video_url %}
  <video autoplay muted loop playsinline controls style="width:100%; max-width:700px; border-radius:8px;">
      <source src="{{ video_url }}" type="video/mp4" />
      متصفحك لا يدعم عرض الفيديو.
  </video>
{% else %}
  <div style="background:#eee; width:100%; max-width:700px; height:300px; display:flex; align-items:center; justify-content:center; border-radius:8px;">
      <p>لا يوجد فيديو حاليًا</p>
  </div>
{% endif %}
</section>

