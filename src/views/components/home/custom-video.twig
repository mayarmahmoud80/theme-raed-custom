{# جلب عنوان الفيديو بالعربية أو الإنجليزي كنسخة احتياطية #}
{% set video_title = '' %}
{% if section.fields.video_title.value is iterable %}
    {% set video_title = section.fields.video_title.value['ar'] | default(section.fields.video_title.value['en'] | default('شاهد الفيديو الآن')) %}
{% else %}
    {% set video_title = section.fields.video_title.value | default('شاهد الفيديو الآن') %}
{% endif %}

{# جلب رابط الفيديو مع fallback #}
{% set video_url = section.fields.video_url.value | default('https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4') %}

{# عرض الفيديو #}
<section class="video-section" style="text-align:center; padding: 40px 0;">
    {% if video_title %}
        <h2 style="color: #333; margin-bottom: 20px;">{{ video_title }}</h2>
    {% endif %}

    {% if video_url %}
        <video autoplay muted loop playsinline controls style="width:100%; max-width:700px; border-radius:8px;">
            <source src="{{ video_url }}" type="video/mp4" />
            متصفحك لا يدعم عرض الفيديو.
        </video>
    {% else %}
        <p>لا يوجد رابط فيديو محدد.</p>
    {% endif %}
</section>

