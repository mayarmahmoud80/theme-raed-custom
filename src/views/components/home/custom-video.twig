<section class="video-section" style="text-align:center; padding: 40px 0;">
  {% assign video_title = section.settings.video_title[shop.locale] %}
  <h2 style="color: #333;">
    {{ video_title | default: 'شاهد الفيديو الآن' }}
  </h2>

  {% assign video_url = section.settings.video_url %}
  {% if video_url %}
    <video autoplay muted loop playsinline controls style="width:100%; max-width: 700px; border-radius: 8px;">
      <source src="{{ video_url }}" type="video/mp4" />
      متصفحك لا يدعم عرض الفيديو.
    </video>
  {% else %}
    <p>لا يوجد رابط فيديو محدد.</p>
  {% endif %}
</section>
