{# =========================
   قسم الفيديو المخصص
   ========================= #}

{% set video_title = fields.video_title|default('شاهد الفيديو الآن') %}
{% set video_url   = fields.video_url|default('https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4') %}

<section class="custom-video">
  <div class="container">
    <h2>{{ video_title }}</h2>

    <div class="video-wrapper">
      <video controls>
        <source src="{{ video_url }}" type="video/mp4" />
        متصفحك لا يدعم تشغيل الفيديو.
      </video>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "custom-video",
  "title": "🎥 قسم الفيديو المخصص",
  "fields": [
    {
      "type": "text",
      "id": "video_title",
      "label": "عنوان الفيديو"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "رابط الفيديو (mp4)"
    }
  ]
}
{% endschema %}

